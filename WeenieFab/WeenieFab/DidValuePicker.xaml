<UserControl x:Class="WeenieFab.DidValuePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="320">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="combo"
              IsEditable="True"
              StaysOpenOnEdit="True"
              IsTextSearchEnabled="False"
              MaxDropDownHeight="300"
              DisplayMemberPath="Label"
              SelectedValuePath="Did"
              Loaded="OnLoaded"
              PreviewKeyUp="OnQueryChanged" />

        <Border Grid.Column="1" Margin="6,0,0,0" VerticalAlignment="Center">
            <Ellipse x:Name="status"
               Width="10" Height="10"
               Fill="LightGray"
               StrokeThickness="0.5" Stroke="Gray"
               ToolTip="DAT presence indicator" />
        </Border>
    </Grid>
</UserControl>
