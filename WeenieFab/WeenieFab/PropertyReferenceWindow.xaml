<Window x:Class="WeenieFab.PropertyReferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Property Reference" Height="500" Width="700">
    <!--
        Displays a breakdown of property values for the various SType categories
        loaded from the merged reference JSON.  Each tab hosts a DataGrid bound
        to a collection exposed by the window's DataContext.  Users can scroll
        and search through the lists to find appropriate property IDs and
        descriptions when creating or editing weenies.
    -->
    <Grid>
        <TabControl Margin="10">
            <TabItem Header="Bool">
                <DataGrid ItemsSource="{Binding BoolList}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Id}" Header="ID" Width="80"/>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="200"/>
                        <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Float">
                <DataGrid ItemsSource="{Binding FloatList}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Id}" Header="ID" Width="80"/>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="200"/>
                        <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="String">
                <DataGrid ItemsSource="{Binding StringList}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Id}" Header="ID" Width="80"/>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="200"/>
                        <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Int64">
                <DataGrid ItemsSource="{Binding Int64List}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Id}" Header="ID" Width="80"/>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="200"/>
                        <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Attribute">
                <DataGrid ItemsSource="{Binding AttributeList}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Id}" Header="ID" Width="80"/>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="200"/>
                        <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Position">
                <DataGrid ItemsSource="{Binding PositionList}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Id}" Header="ID" Width="80"/>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="200"/>
                        <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>