<UserControl x:Class="WeenieFab.EnhancedTools"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="400">
    <!--
        EnhancedTools contains the user interface for the new features being added
        to WeenieFab: resolving Setup DIDs using the compiled CLI, copying from
        an existing weenie, and selecting icons, motion tables and spell tables
        via dropâ€‘down lists.  The control can be placed inside a new TabItem in
        MainWindow.xaml.
    -->
    <Grid Background="#FFE1E8F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20" Orientation="Vertical" Width="350">
                <TextBlock Text="Enhanced Tools" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <!-- Setup DID Resolution -->
                <TextBlock Text="Setup DID (hex)" Margin="0,10,0,2"/>
                <TextBox x:Name="tbSetupDID" Width="200" Height="23"/>
                <Button Content="Resolve Visual" Width="120" Height="25" Margin="0,5,0,10" Click="ResolveVisual_Click"/>

                <!-- Copy from existing Weenie -->
                <TextBlock Text="Copy From WCID" Margin="0,10,0,2"/>
                <TextBox x:Name="tbCopyWcid" Width="200" Height="23"/>
                <Button Content="Load Weenie" Width="120" Height="25" Margin="0,5,0,10" Click="LoadWeenie_Click"/>

                <!-- Icon Selection -->
                <TextBlock Text="Icon" Margin="0,10,0,2"/>
                <ComboBox x:Name="cbIcons" Width="200" Height="23"/>

                <!-- Motion Table Selection -->
                <TextBlock Text="Motion Table" Margin="0,10,0,2"/>
                <ComboBox x:Name="cbMotionTables" Width="200" Height="23"/>

                <!-- Spell Table Selection -->
                <TextBlock Text="Spell Table" Margin="0,10,0,2"/>
                <ComboBox x:Name="cbSpellTables" Width="200" Height="23"/>

                <!-- Additional content placeholder for future enhancements -->
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Additional Tools" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="Add more controls here as needed." FontStyle="Italic" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>