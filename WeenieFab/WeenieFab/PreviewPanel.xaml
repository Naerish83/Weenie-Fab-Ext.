<UserControl x:Class="WeenieFab.Controls.PreviewPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="480">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <DockPanel LastChildFill="False" Margin="0,0,0,8">
            <TextBlock Text="DID:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="DidBox" Width="160" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <Button x:Name="PreviewBtn" Content="Preview" Width="88" Margin="0,0,8,0"/>
            <Button x:Name="OpenViewerBtn" Content="Open in Viewer" Width="120"/>
        </DockPanel>

        <!-- Preview area -->
        <Border Grid.Row="1" BorderBrush="#444" BorderThickness="1" CornerRadius="6"
            Background="#111" Padding="8">
            <Grid>
                <Image x:Name="PreviewImg" Stretch="Uniform"/>
                <TextBlock x:Name="Hint"
                   Text="Drag an image here to override (binds to current DID)"
                   Foreground="#888" HorizontalAlignment="Center" VerticalAlignment="Center"
                   TextAlignment="Center" TextWrapping="Wrap" Margin="12"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
